BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: "vertical"
            size_hint_x: .30
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        id: convert_button
        text: "Convert Miles to Kilometres"
        on_press: app.handle_calculate()

    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)